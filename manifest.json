{
  "manifest_version": 3,
  "name": "Jenkins Genie",
  "description": "Filter Jenkins builds by user, branch, status, or date.",
  "version": "1.0.0",
  "action": {
    "default_title": "Jenkins Genie",
    "default_popup": "index.html",
    "default_icon": {
      "19": "genie.png",
      "38": "genie.png"
    }
  },
  "icons": {
    "16": "genie.png",
    "48": "genie.png",
    "128": "genie.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "webRequest"
  ],
  "background": {
    "service_worker": "src/content-script/src/background.js"
  },
  "host_permissions": [
    "https://*.runwayci.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://blank.org/*", "https://*.runwayci.com/job/*/", "https://*.runwayci.com/*/job/*/"],
      "js": ["src/content-script/src/main.jsx"],
      "run_at": "document_end"
    }
  ]
}
